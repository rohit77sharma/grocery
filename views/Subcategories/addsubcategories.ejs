<%- contentFor('HeaderCss') %>
    <!-- perticular page css -->


    <%- contentFor('body') %>
        <div class="content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-box">
                            <h4 class="page-title">Add Sub-Category</h4>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Dashboard</a></li>
                                <li class="breadcrumb-item active">Sub-Category</li>
                            </ol>
                        </div>
                    </div>
                </div>
                <!-- end row -->

                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <div class="card-body">

                                <form action="/addsubcategories" enctype="multipart/form-data" method="POST">


                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Sub-Category
                                            Name</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="text" name="subcategoryname"
                                                placeholder="Add Category Name">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Sub-title</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="text" name="subsubtitle"
                                                placeholder="Add Sub-title">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">MainCategory</label>
                                        <% if (data !=null) { %>
                                            <div class="col-sm-10">
                                                <!-- <input class="form-control" type="text" name="maincategory"
                                                placeholder="Add Id"> -->
                                                <select class="form-control" name="maincategory">

                                                    <% data.forEach(result=> { %>
                                                        <option >
                                                            <%= result.categorisename %>
                                                        </option>
                                                        <% }); %>

                                                </select>
                                            </div>
                                            <% } %>
                                    </div>

                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Images</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="file" name="images" accept="images/*"
                                                placeholder="Insert Image Here">
                                        </div>
                                    </div>
                                    <div class="form-group-row">

                                        <button
                                            class="btn btn-danger btn-rounded btn-custom btn-block waves-effect waves-light">Submit
                                        </button>

                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row -->


        </div> <!-- container-fluid -->

        </div> <!-- content -->


        <%- contentFor('FooterJs') %>