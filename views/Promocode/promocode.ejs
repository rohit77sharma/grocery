<%- contentFor('HeaderCss') %>
    <!-- perticular page css -->
    <link href="public/plugins/RWD-Table-Patterns/dist/css/rwd-table.min.css" rel="stylesheet" type="text/css"
        media="screen">

    <%- contentFor('body') %>
        <div class="content">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-box">
                            <h4 class="page-title">PromoCodes</h4>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Dashborad</a></li>
                                <li class="breadcrumb-item active">PromoCodes</li>
                            </ol>


                        </div>
                    </div>
                </div>
                <!-- end row -->

                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <form action="/submitpromocode" method="POST">
                                <div class="card-body">
                                    <h4 class="mt-0 header-title">New Promo Codes</h4>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">PromoCodes</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="text" name="promocode"
                                                placeholder="Promocode">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Message</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="text" name="message"
                                                placeholder="message">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Start Date</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="date" name="startdate"
                                                placeholder="Start-Date">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">End Date</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="date" name="enddate"
                                                placeholder="End-Date">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">No. of Users</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="number" name="noofusers"
                                                placeholder="No. of Users">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Minimum Order Amount</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="number" name="miniorderamount">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Discount</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="number" name="promodiscount">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Discount Type</label>
                                        <div class="col-sm-10">
                                            <select class="form-control" name="discounttype">
                                                <option>Percentage</option>
                                                <option>Amount</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Max. Discount Price</label>
                                        <div class="col-sm-10">
                                            <input class="form-control" type="number" name="maxdiscountprice"
                                                placeholder="Max. Discount Price">
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Repeate Usage</label>
                                        <div class="col-sm-10">
                                            <select class="form-control" name="repeateuse">
                                                <option>Yes</option>
                                                <option>No</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Status</label>
                                        <div class="col-sm-10">
                                            <select class="form-control" name="status">
                                                <option>Active</option>
                                                <option>Deactive</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group-row">

                                        <button
                                            class="btn btn-danger btn-rounded btn-custom btn-block waves-effect waves-light">Submit
                                        </button>

                                    </div>

                                </div>
                            </form>
                        </div>
                    </div>
                </div> <!-- end col -->
                <div class="row">
                    <div class="col-12">
                        <div class="card m-b-20">
                            <div class="card-body">
                                <div class="table-rep-plugin">
                                    <div class="table-responsive b-0" data-pattern="priority-columns">
                                        <% if (data != null) { %>
                                        <table id="tech-companies-1" class="table  table-striped">
                                            <thead>
                                                <tr>
                                                    <th>id</th>
                                                    <th data-priority="1">PromoCodes</th>
                                                    <th data-priority="3">Message</th>
                                                    <th data-priority="1">Start Date</th>
                                                    <th data-priority="3">End Date</th>
                                                    <th data-priority="3">No. of Users</th>
                                                    <th data-priority="6">Minimum Order Amount</th>
                                                    <th data-priority="6">Discount</th>
                                                    <th data-priority="6">Discount Type</th>
                                                    <th data-priority="6">Max. Discount Price</th>
                                                    <th data-priority="6">Repeate Usage</th>
                                                    <th data-priority="6">Status</th>
                                                    <th data-priority="6">Delete</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% data. forEach(result=>{ %>
                                                <tr>
                                                    <th><%= result.id%></th>
                                                    <td><%= result.promocode%><span class="co-name">Google Inc.</span></td>
                                                    <td><%= result.message%></td>
                                                    <td><%= result.startdate%></td>
                                                    <td><%= result.enddate%></td>
                                                    <td><%= result.noofusers%></td>
                                                    <td><%= result.miniorderamount%></td>
                                                    <td><%= result.promodiscount%></td>
                                                    <td><%= result.discounttype%></td>
                                                    <td><%= result.maxdiscountprice%></td>
                                                    <td><%= result.repeateuse%></td>
                                                    <td><%= result.status%></td>
                                                    <td><a href="deletepromcode?id=<%= result.id %>" ; style="color: blue;" onclick="return confirm('Are you sure?')">Delete</a></td>
                                                </tr>
                                                <% }); %>
                                            </tbody>
                                        </table>
                                        <% } %>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div> <!-- end col -->
                </div> <!-- end row -->

            </div> <!-- container-fluid -->

        </div> <!-- content -->
        </div> <!-- end row -->
        </div> <!-- container-fluid -->
        </div> <!-- content -->


        <%- contentFor('FooterJs') %>
            <script src="public/plugins/RWD-Table-Patterns/dist/js/rwd-table.min.js"></script>



            <script>
                $(function () {
                    $('.table-responsive').responsiveTable({
                        addDisplayAllBtn: 'btn btn-secondary'
                    });
                });
            </script>